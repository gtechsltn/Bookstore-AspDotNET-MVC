@model IEnumerable<Bookstore_AspDotNET_MVC.Models.Book>

@{
    ViewData["Title"] = "BookManager";
}

<h1>BookManager</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAuthorNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCompanyNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAuthorNavigation.IdAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCompanyNavigation.IdCompany)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBook">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdBook">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBook">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
