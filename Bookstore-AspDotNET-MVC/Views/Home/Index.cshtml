@model Bookstore_AspDotNET_MVC.DTO.BookPagineDTO

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/home.css" />
<!-- ======================================CAROUSEL====================================== -->
<div class="row">
    <div class="col c-3 carousel">
        <div class="carousel--category__title "> Danh mục sách </div>
        <div class="carousel--category__item">
            <ul class="nav flex-column">
                @foreach (var category in ViewBag.listCategory)
                {
                    <li>
                        <a class="nav-link" asp-action="Category" asp-controller="Home" asp-route-idCategory="@category.CategoryId">@category.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="col c-9">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @*<div class="carousel-item active">
                        <img class="d-block w-100" style="width: 100%; height: 100%" th:src="@{../../image/background1.jpg}" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%; height: 100%" class="d-block w-100" th:src="@{../../image/background2.jpg}" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%; height: 100%" class="d-block w-100" th:src="@{../../image/background3.jpg}" alt="Third slide">
                    </div>*@
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
